{
  "manifest_version": 3,
  "name": "WCAG Auditor",
  "version": "1.0.0",
  "description": "Audita páginas web quanto à conformidade com WCAG 2.2",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "src/ui/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.js",
        "src/rules/page-title.js",
        "src/rules/lang-html.js",
        "src/rules/img-alt.js",
        "src/rules/link-name.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
